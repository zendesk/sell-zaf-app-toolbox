{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "esnext",
    "target": "es2015",
    "jsx": "react",
    "baseUrl": ".",
    "lib": ["es6", "dom"],
    "declaration": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
  },
  "include": ["./src/**/*", "./typings.d.ts"]
}
